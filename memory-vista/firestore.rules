rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default rule - require authentication for all operations
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Exception for invitations - allow public read access
    // This enables users without accounts to view invitation details
    match /invitations/{invitationId} {
      // Allow read access without authentication to support public invitation links
      allow read: if true;
      
      // Only authenticated users can create, update, or delete invitations
      allow create, update, delete: if request.auth != null;
    }
  }
} 